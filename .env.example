# ============================================
# ADSapp Environment Variables
# ============================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-key

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token
WHATSAPP_API_VERSION=v18.0

# Stripe
STRIPE_SECRET_KEY=sk_test_your-key
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# Email (Resend)
RESEND_API_KEY=re_your_key
RESEND_FROM_EMAIL=noreply@adsapp.nl

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-256-bit
NEXTAUTH_URL=http://localhost:3000

# Cron Jobs
CRON_SECRET=your-cron-secret-token

# Feature Flags
NEXT_PUBLIC_ENABLE_DRIP_CAMPAIGNS=true
NEXT_PUBLIC_ENABLE_BROADCAST_CAMPAIGNS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
